        sc.nextLine();

        if (opcion == 1) {
            CRUDPaciente.modificarPaciente(con);
        } else if (opcion == 2) {
            CRUDMedicamento.modificarMedicamento(con);
        } else if (opcion == 3) {
            CRUDReceta.modificarReceta(con);
        }
    }

